---
import BlogPost from '../components/BlogPost.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const pageTitle = "Mi blog de aprendizaje de Astro";
const allPost = Object.values(import.meta.glob('./posts/*.md', { eager: true }));

---

<BaseLayout pageTitle={pageTitle}>
<p>Este es donde publicar√© sobre mi viaje aprendiendo Astro.</p>

<ul>
	{ allPost.map((post: any) => <BlogPost data={post} /> ) }
</ul>
</BaseLayout>
